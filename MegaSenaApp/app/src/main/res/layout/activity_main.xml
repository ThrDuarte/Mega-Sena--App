<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/cor02">

    <TextView
        android:id="@+id/tv_numeroSorteio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mega Sena"
        android:textSize="50sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/cor01"
        />

    <Button
        android:id="@+id/btn_sortear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sortear"
        android:textSize="30sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tv_numeroSorteio"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/cor01"
        />

    <TextView
        android:id="@+id/text_numsort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NÃºmero Sorteado:"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn_sortear"
        android:layout_marginTop="10dp"
        android:textColor="@color/cor03"
        />



</androidx.constraintlayout.widget.ConstraintLayout>